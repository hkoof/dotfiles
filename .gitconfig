[core]
	editor = vim
[merge]
	tool = vimdiff
[color]
	ui = true
[alias]
    # log-aliases:
    #   l   = Log:      short decorated graphic, that is last 10 lines without pager
    #   ll  = Long Log: long decorated graphic Log.
    #   wl  = Wide Log: multiple lines per commit. Line-wrapped commit description.
    #   br  = BRanches: only last commit of each branch
    #   npy = No Pushed Yet: show local commits of al branches which are not on the tracked (remote) branches.
    l = !git --no-pager log -n10 --graph --pretty='format:%C(yellow)%h%Creset%C(white)%d%Creset %C(blue)%cr%Creset %C(dim green)%cn%Creset %w(0)%s'
    ll = log --graph --pretty='format:%C(yellow)%h%Creset%C(white)%d%Creset %C(blue)%cr%Creset %C(dim green)%cn%Creset %s'
    wl = log --graph --pretty='format:%C(yellow)%h%Creset %C(blue)%cr%Creset %C(dim green)%cn%Creset%C(white)%d%Creset\n    %w(80,0,4)%s'
    br = log --branches --simplify-by-decoration --pretty='format:%C(yellow)%h%Creset%C(white)%d%Creset %C(blue)%cr%Creset %C(dim green)%cn%Creset %s'
    npy = log --branches --not --remotes --pretty='format:%C(yellow)%h%Creset%C(white)%d%Creset %C(blue)%cr%Creset %C(dim green)%cn%Creset %s'
